mixin breadcrumbs(mod, items)
	- var name_block = 'breadcrumbs'
	- var attributes = {};
		if (mod)
			- attributes.class = name_block+'_'+mod;
		else
			- attributes.class = name_block;
	- var quantity = items.length;
	+b.NAV&attributes(attributes)
		+e.OL.list(itemscope='', itemtype='http://schema.org/BreadcrumbList')
			each item, index in items
				if (index < quantity - 1)
					+e.LI.item(itemprop='itemListElement', itemscope='', itemtype='http://schema.org/ListItem')
						+e.A.link(href='javascript:void(0)', itemprop='item')
							+e.SPAN.text(itemprop='name')= item
						meta(itemprop='position', content= index + 1)
				else
					+e.LI.item.active(itemprop='itemListElement', itemscope='', itemtype='http://schema.org/ListItem')
						+e.SPAN.link(itemprop='item')
							+e.STRONG.text(itemprop='name')= item
						meta(itemprop='position', content= index + 1)