include ../components/libs/bemto/bemto
include ../components/libs/jade-injected/jade-injected

include ../components/head/head.pug
include ../components/header/header
include ../components/icon/icon
include ../components/social/social
include ../components/slider/slider
include ../components/block-container/block-container
include ../components/footer/footer.pug

doctype html
html(class="no-js", lang="ru")
    head
        +head({
            title: 'Интернет магазин Итальянской мебели в Москве'
        })
    body.page
        | %=symbols=%
        +header()
        +slider({
            type: 'main'
        })
        +b.section
            +e.box
                +block-container({
                    title: 'Итальянская мебель',
                    headerButtons: [
                        {
                            text: 'Все стили',
                            link: '#'
                        },
                        {
                            text: 'Классика',
                            link: '#'
                        },
                        {
                            text: 'Современный',
                            link: '#'
                        }
                    ]
                })
        +b.section
            +e.box
                +block-container({
                    title: 'Специальное предложение'
                })
                    +slider({
                        type: 'card',
                        elements: []
                    })
        +b.section
            +e.box
                +block-container({
                    title: 'Популярные модели',
                    headerLink: {name: 'Смотреть все',href: '/'}
                })
                    +slider({
                        type: 'card',
                        elements: []
                    })
        +b.section
            +e.box
                +block-container({
                    title: 'Популярные бренды',
                    headerLink: {name: 'Смотреть все', href: '/'}
                })
                    +slider({
                        type: 'brand',
                        elements: []
                    })
        +b.section
            +e.box
                +icon({type: 'arrow',semantic: 'arrow'})
                +icon({type: 'search',semantic: 'search'})
                +icon({type: 'basket',semantic: 'basket'})
                +icon({type: 'home',semantic: 'home'})
                +icon({type: 'user',semantic: 'user'})
                +icon({type: 'phone',semantic: 'phone'})
                +icon({type: 'burger',semantic: 'burger'})
                +icon({type: 'map',semantic: 'map'})
                +icon({type: 'phone-two'})
                +icon({type: 'social_vk'})
                +icon({type: 'social_fb'})
                +icon({type: 'social_lin'})
                +icon({type: 'social_yt'})
                +icon({type: 'social_in'})
                +icon({type: 'close'})
                +icon({type: 'search-main'})
                +icon({type: 'filter'})

        +b.section
            +e.box
        +footer()

        script(src='%=static=%js/separate-js/svg4everybody.min.js')
        script svg4everybody();

        //- Main scripts. You can replace it, but I recommend you to leave it here
        script(src='%=static=%js/main%=hash=%%=min=%.js')
